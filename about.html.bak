  <style>
    /* Additional styles for about page */
    .about-hero {
      background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(./assets/images/theth.jpg);
      background-position: center;
      background-size: cover;
      padding-top: 180px;
      min-height: 500px;
      display: flex;
      align-items: center;
      position: relative;
      z-index: 1;
    }
    
    .about-hero .container {
      position: relative;
      z-index: 5;
    }
    
    .about-section {
      padding-block: var(--section-padding);
    }
    
    .about-content {
      margin-bottom: 50px;
    }
    
    .about-text {
      color: var(--black-coral);
      line-height: 1.8;
      margin-bottom: 30px;
    }
    
    .values-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 30px;
      margin-top: 40px;
    }
    
    .value-card {
      background: var(--white);
      padding: 30px;
      border-radius: var(--radius-15);
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
      text-align: center;
      transition: transform 0.3s ease;
    }
    
    .value-card:hover {
      transform: translateY(-10px);
    }
    
    .value-icon {
      width: 70px;
      height: 70px;
      background: var(--bright-navy-blue);
      color: var(--white);
      font-size: 30px;
      border-radius: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0 auto 20px;
    }
    
    .value-title {
      color: var(--yale-blue);
      font-size: 20px;
      margin-bottom: 15px;
    }
    
    .value-text {
      color: var(--black-coral);
      line-height: 1.6;
    }
    
    /* Responsive adjustments for about hero */
    @media (max-width: 767px) {
      .about-hero {
        padding-top: 150px;
        min-height: 400px;
      }
      
      .about-hero .hero-title {
        font-size: calc(20px + 2vw);
        margin-bottom: 15px;
      }
      
      .about-hero .hero-text {
        font-size: var(--fs-6);
      }
    }
  </style>
</head>

